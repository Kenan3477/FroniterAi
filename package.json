{
  "name": "omnivox-ai-monorepo",
  "version": "1.0.0",
  "description": "Omnivox-AI Platform - Conversational AI with workflow automation",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:local-backend": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:verified": "node scripts/dev.js",
    "dev:backend-only": "cd backend && npm run dev",
    "dev:frontend-only": "cd frontend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "verify:backend": "node scripts/verify-backend.js",
    "test:integration": "node scripts/integration-tests.js",
    "pre-commit": "npm run verify:backend && npm run test:integration",
    "build": "npm run build:frontend",
    "build:vercel": "npm run build:frontend",
    "build:full": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "node-fetch": "^2.7.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "mysql2": "^3.18.0",
    "vercel": "^50.14.0",
    "yn": "^5.1.0"
  }
}
