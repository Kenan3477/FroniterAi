# Frontier Conversational Dashboard - Production Environment

# API Configuration
REACT_APP_API_URL=https://api.frontier.ai
REACT_APP_WS_URL=wss://api.frontier.ai

# App Configuration
REACT_APP_NAME=Frontier Dashboard
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_AUTO_REFRESH=true

# Debug Settings
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=error

# Authentication
REACT_APP_TOKEN_STORAGE_KEY=frontier_token
REACT_APP_REMEMBER_ME_KEY=frontier_remember

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_DEFAULT_LANGUAGE=en

# Performance
REACT_APP_MAX_CONVERSATION_HISTORY=100
REACT_APP_TYPING_DELAY=150
REACT_APP_AUTO_SAVE_INTERVAL=30000

# External Services
REACT_APP_SENTRY_DSN=${SENTRY_DSN}
REACT_APP_ANALYTICS_ID=${ANALYTICS_ID}
REACT_APP_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
