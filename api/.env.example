# API Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
DB_USER=frontier
DB_PASSWORD=frontier_secure_password_2024
DB_NAME=frontier_api
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=frontier_redis_secure_2024
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_2024_change_this
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# OAuth Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3001/auth/callback

# API Configuration
NODE_ENV=development
API_VERSION=v1
API_BASE_URL=http://localhost:8000
REST_API_PORT=3000
GRAPHQL_API_PORT=4000
AUTH_SERVICE_PORT=3001
RATE_LIMITER_PORT=3002
DOCS_SERVICE_PORT=3003

# Rate Limiting Tiers
RATE_LIMIT_FREE=100
RATE_LIMIT_DEVELOPER=1000
RATE_LIMIT_PROFESSIONAL=10000
RATE_LIMIT_ENTERPRISE=unlimited

# Monitoring Configuration
GRAFANA_PASSWORD=admin_secure_2024
PROMETHEUS_RETENTION=15d

# Kong Configuration
KONG_ADMIN_PORT=8001
KONG_PROXY_PORT=8000
KONG_GUI_PORT=8002

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,http://localhost:8002
API_KEY_LENGTH=32
SESSION_SECRET=your_session_secret_key_2024

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/frontier.crt
SSL_KEY_PATH=/etc/ssl/private/frontier.key

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# External Service URLs
VISUAL_DESIGN_SERVICE_URL=http://localhost:5000
SELF_IMPROVEMENT_SERVICE_URL=http://localhost:5001
CODE_QUALITY_SERVICE_URL=http://localhost:5002
IMAGE_GENERATION_SERVICE_URL=http://localhost:5003
AUDIO_VIDEO_SERVICE_URL=http://localhost:5004

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,docx,txt,json

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=frontier-api-backups
