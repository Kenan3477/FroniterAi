# ========================================
# OMNIVOX AI TRANSCRIPTION CONFIGURATION
# ========================================

# Core transcription settings
TRANSCRIPTION_PROVIDER=openai  # openai | self-hosted
TRANSCRIPTION_LANGUAGE=en
TRANSCRIPTION_TIMESTAMPS=true
TRANSCRIPTION_DIARIZATION=true
TRANSCRIPTION_WORD_TIMESTAMPS=true
TRANSCRIPTION_CONCURRENCY=5

# OpenAI Whisper API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Self-hosted Whisper Configuration (if using self-hosted)
WHISPER_SELF_HOSTED_ENDPOINT=http://localhost:8000
WHISPER_SELF_HOSTED_API_KEY=your-self-hosted-api-key

# Queue Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Processing
TEMP_DIRECTORY=/tmp/omnivox-transcripts
MAX_FILE_SIZE=26214400  # 25MB (Whisper API limit)

# GDPR and Compliance
TRANSCRIPT_RETENTION_DAYS=365  # How long to keep transcripts
DATA_REGION=global  # global | eu | us
AUTO_DELETE_AUDIO_FILES=true  # Delete audio files after processing

# AI Analysis Configuration
ENABLE_AI_ANALYSIS=true
AI_ANALYSIS_MODEL=gpt-4
COMPLIANCE_MONITORING=true

# Performance and Scaling
BATCH_SIZE=100  # Historical backfill batch size
RETRY_ATTEMPTS=3
RETRY_DELAY_BASE=10000  # Base delay in milliseconds for exponential backoff

# Cost Management
COST_TRACKING=true
DAILY_COST_LIMIT=100.00  # Daily spending limit in USD
ALERT_COST_THRESHOLD=80.00  # Alert when 80% of daily limit reached

# Monitoring and Alerts
QUEUE_HEALTH_CHECK_INTERVAL=300000  # 5 minutes
FAILED_JOB_RETRY_INTERVAL=3600000   # 1 hour
CLEANUP_INTERVAL=86400000           # 24 hours
GDPR_CLEANUP_INTERVAL=604800000     # 7 days

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=30000  # 30 seconds

# Database Configuration (inherited from main app)
DATABASE_URL=postgresql://username:password@localhost:5432/omnivox_ai

# Logging
LOG_LEVEL=info
LOG_TRANSCRIPTION_EVENTS=true
LOG_PERFORMANCE_METRICS=true

# Feature Flags
ENABLE_HISTORICAL_BACKFILL=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_COMPLIANCE_FLAGS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_SPEAKER_ANALYTICS=true