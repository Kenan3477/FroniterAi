# FrontierAI Dashboard Environment Configuration
# Copy these environment variables to your Railway project

# Flask Configuration
FLASK_APP=dashboard_api.py
FLASK_ENV=production
PORT=5000

# GitHub Repository Configuration
GITHUB_REPO=https://github.com/Kenan3477/FroniterAi
GITHUB_OWNER=Kenan3477
GITHUB_REPO_NAME=FroniterAi

# Optional: GitHub Token for enhanced monitoring (set in Railway dashboard for security)
# GITHUB_TOKEN=your_github_token_here

# Database Configuration (SQLite files will be created automatically)
DATABASE_PATH=./business_profiles.db
EVOLUTION_DATABASE=./evolution_trail.db

# Self-Evolution System Configuration
EVOLUTION_ENABLED=true
AUTO_TASK_IMPLEMENTATION=false  # Set to true for autonomous task implementation
MARKET_ANALYSIS_INTERVAL=3600   # 1 hour in seconds
GITHUB_MONITOR_INTERVAL=300     # 5 minutes in seconds

# Business Intelligence Configuration
MAX_BUSINESS_PROFILES=100
DEFAULT_BUSINESS_TYPE=consulting
ENABLE_REAL_TIME_UPDATES=true

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Configuration
SECRET_KEY=frontier-ai-dashboard-secret-key-change-in-production
SESSION_TIMEOUT=3600

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=./uploads

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Development Configuration (only for local development)
DEBUG=false
TESTING=false
